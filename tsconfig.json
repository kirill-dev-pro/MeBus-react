{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "skipLibCheck": true,

    /* Bundler mode */
    "resolveJsonModule": true,
    "isolatedModules": true,

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,

    /* Publishing */
    "declaration": true,
    "outDir": "dist",
    "noEmit": false,
  },
  "include": ["index.ts"],
  "exclude": [
    "node_modules",
    "dist"
  ],
}
